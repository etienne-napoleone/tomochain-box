{
    "ignore": [
      "README.md",
      ".gitignore",
      ".github"
    ],
    "commands": {
      "Compile contracts": "truffle compile",
      "Migrate contracts to testnet": "truffle migrate --network testnet",
      "Migrate contracts to mainnet": "truffle migrate --network mainnet",
      "Test contracts": "truffle test"
    },
    "hooks": {
      "post-unpack": "echo .mnemonic > .gitignore"
    }
  }
